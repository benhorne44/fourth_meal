<%= form_tag login_to_checkout_path, method: :post do %>
  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div id='login_button'>
    <%= submit_tag "Login", {:class => "btn btn-success", :id => 'checkout_login_button'} %>
  </div>
<% end %>
