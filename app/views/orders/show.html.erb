<div id="current-order">
<h1>Current Order</h1>


<% if @order_items.count > 0 %>
  <table class="table">
    <thead>
      <tr>
        <th>Dish</th>
        <th>Description</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Remove?</th>
      </tr>
    </thead>

   <tbody>
  <% @order_items.each do |order_item| %>
    <% item = order_item.item %>
    <tr id="item_<%= item.id %>">

      <%= render partial: "item", :locals => {item: order_item.item} %>
      
      <%= form_for order_item do |f| %>
        <td>
          <%= f.number_field :quantity %>
          <%= f.submit "Adjust Quantity", {:class => "btn btn-success"} %>
        </td>
      <% end %>
      <td>
        <%= link_to "x", order_item_path(order_item), {method: 'delete', :class => "btn btn-danger remove-item", id: 'remove_item'} %></td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td></td>
      <td><h4>Order Total</h4></td>
      <td><h4>$<%= @order.subtotal %>0</h4></td>
      <td>
<%= link_to "Checkout", checkout_path, {:class => "btn btn-primary login"} %></td>
      <td></td>
    </tr>
  </tfoot>
</table>
<% else %>
<% end %>
</div>
