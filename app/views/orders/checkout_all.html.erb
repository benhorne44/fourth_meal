<div class="user_order" id="order_details">
  <h1><%= checkout_header %></h1>
  <% @orders.each do |order| %>
    <div id="restaurant_<%= order.restaurant.id %>_order">
      <div class="checkout-container">
        <div class="order">
          <%= order.restaurant.name %>
          <% order.items.each do |item| %>
            <h4><span class="glyphicon glyphicon-cutlery"></span><%= item.title %></h4>
            <p><%= item.description %></p>
            <p><%= print_price(item.price) %>
          <% end %>
        </div>
      </div>

      <div class="total">
        <h4>Restaurant Subtotal</h4>
        <h4>$<%= order.subtotal %>0</h4>
      </div>
    </div>
  <% end %>
  <div id="all_orders_total">
    <h4>Order Total</h4>
    <h4>$<%= @total %>0</h4>
  </div>
</div>
