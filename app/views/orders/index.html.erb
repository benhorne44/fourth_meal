<div id="orders">
  <h1>All Orders</h1>
  <% @orders.each do |order| %>
  <h3>Order #<%= order.id %></h3>
  <table class="table">
    <thead>
      <tr>
        <th>Dish</th>
        <th>Description</th>
        <th>Price</th>
        <th>Categories</th>
      </tr>
    </thead>
    <% order.items.each do |item| %>
    <tbody>
    <tr>

      <%= render partial: "item", :locals => {item: item} %>
      
      <td>
        <% item.categories.each do |category| %>
          <%= category.name %>
        <% end %>
      </td>
    </tr>
    </tbody>
    <% end %>
  </table>
  <p>Order Status: <%= order.status %></p>
  <% end %>
<br />
</div>
